<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field" style="display:none">
    <%= form.text_field :user_id,  :value => current_user.id%>
  </div>
  <div class="field form-group">
    Title
    <%= form.text_field :name ,  :placeholder=>"Task" ,class:"form-control" %>
  </div>
  <div class="field form-group">
    Detail
    <%= form.text_area :detail, :placeholder=>"Detail Task",class:"form-control"  %>
  </div>
  <div class="field form-group">
    Date End
    <%= form.date_field :date_start,class:"form-control picker-form",
    autocomplete: 'off' %>
  </div>
  <div class="field form-group">
    Date Begin
    <%= form.date_field :date_end ,class:"form-control picker-form",
         autocomplete: 'off' %>
  </div>
  <div class="form-group">
    <div class="form-check">
      <%= form.check_box :state, class:"form-check-input"%>
      <label class="form-check-label" for="gridCheck">
        Mark as completed
      </label>
    </div>
  </div>
  <div class="actions">
    <%= form.submit "Save", class:"btn btn-danger" %>
  </div>
<% end %>
