<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to "To Do List ", "/", class: "navbar-brand"%>
  <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">

      <%if user_signed_in?%>
        <li class="nav-item">
           <%= link_to "Reportes",{ controller: "tasks", action: "generate_report"},class:"nav-link"%>
        </li>

        <li class="nav-item">
          <%= link_to "Cerrar Sesion", destroy_user_session_path, method: :delete, 
                class: "nav-link"%>
        </li>
      <%else%>
        <li class="nav-item">
           <%= link_to "Sign In", new_user_session_path,class: "nav-link"%>
        </li>
         <li class="nav-item">
           <%= link_to "Register ", new_user_registration_path,class: "nav-link"%>
        </li>
      <%end%>
    </ul>
  </div>
</nav>

<% if alert.present? %>
  
<div class="alert alert-warning alert-dismissible fade show p-1" role="alert">
  <strong><p class="alert p-0"><%= alert %></p></strong> 
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>
<% if notice.present? %>
<div class="alert alert-success alert-dismissible fade show p-1" role="alert">
  <strong><p class="alert p-0"><%= notice %></p></strong> 
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>




